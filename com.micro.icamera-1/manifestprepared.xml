<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.micro.icamera">
    <application android:icon="@drawable/camera" android:label="@string/app_name">
        <activity android:label="@string/app_name" android:name="com.micro.icamera.ui.IntroActivity" android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"><nothingHere/></action>
                <category android:name="android.intent.category.LAUNCHER"><nothingHere/></category>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="com.micro.icamera.ui.CameraActivity" android:screenOrientation="landscape" android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"><nothingHere/></action>
            </intent-filter>
        </activity>
    </application>
<uses-feature android:name="android.hardware.camera"><nothingHere/></uses-feature>
    <uses-feature android:name="android.hardware.camera.autofocus"><nothingHere/></uses-feature>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"><nothingHere/></uses-permission>
    <uses-permission android:name="android.permission.CAMERA"><nothingHere/></uses-permission>
    <uses-permission android:name="android.permission.VIBRATE"><nothingHere/></uses-permission>
    </manifest>
