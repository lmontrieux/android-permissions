                <action android:name="android.intent.action.MAIN"><nothingHere/></action>
                <category android:name="android.intent.category.LAUNCHER"><nothingHere/></category>
            </intent-filter>
        </activity>
        <activity android:clearTaskOnLaunch="true" android:finishOnTaskLaunch="true" android:launchMode="standard" android:name="PlayerActivity"><nothingHere/></activity>
        <activity android:name="CheckInternetActivity"><nothingHere/></activity>
        <activity android:name="PreferencesActivity"><nothingHere/></activity>
        <activity android:name="AboutActivity"><nothingHere/></activity>
        <activity android:configChanges="keyboard|keyboardHidden|orientation" android:name="com.google.ads.AdActivity"><nothingHere/></activity>
        <service android:exported="false" android:name=".PlayerService">
            <intent-filter>
                <action android:name="com.shamirradio.android.action.PLAYER"><nothingHere/></action>
            </intent-filter>
        </service>
    </application>
