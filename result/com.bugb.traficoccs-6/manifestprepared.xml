            <intent-filter>
                <action android:name="android.intent.action.VIEW"><nothingHere/></action>
                <android-data android:host="twitterTraficoCCS" android:scheme="twitter"><nothingHere/></android-data>
            <category android:name="android.intent.category.DEFAULT"><nothingHere/></category>
                <category android:name="android.intent.category.BROWSABLE"><nothingHere/></category>
                </intent-filter>
        </activity>
        <activity android:label="@string/Share_Traffic_Send" android:name=".ShareActivity" android:theme="@style/NoTitleDialog"><nothingHere/></activity>
        <activity android:name=".FacebookLogin" android:theme="@style/NoTitleDialog"><nothingHere/></activity>
        <activity android:excludeFromRecents="true" android:name=".ReportActivity" android:noHistory="true" android:theme="@style/NoTitleDialog"><nothingHere/></activity>
    </application>
<uses-permission android:name="android.permission.INTERNET"><nothingHere/></uses-permission>
