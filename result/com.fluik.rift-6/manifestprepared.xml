<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.fluik.rift">
    <application android:icon="@drawable/icon" android:label="@string/app_name_short" android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name=".Splash" android:noHistory="true" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"><nothingHere/></action>
                <category android:name="android.intent.category.LAUNCHER"><nothingHere/></category>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name=".Main" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.fluik.action.MAIN"><nothingHere/></action>
            </intent-filter>
        </activity>
        <activity android:excludeFromRecents="true" android:name=".ui.BuildPopupView" android:screenOrientation="portrait" android:windowSoftInputMode="stateAlwaysVisible"><nothingHere/></activity>
    </application>
</manifest>
