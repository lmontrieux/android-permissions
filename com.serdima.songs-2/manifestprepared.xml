<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:installLocation="auto" package="com.serdima.songs">
    <application android:icon="@drawable/harp" android:label="@string/app_name" android:theme="@style/SongsTheme.Light">
        <activity android:label="@string/app_name" android:launchMode="singleTop" android:name=".ActivityMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"><nothingHere/></action>
                <action android:name="android.intent.action.SEARCH"><nothingHere/></action>
            <category android:name="android.intent.category.LAUNCHER"><nothingHere/></category>
                </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable"><nothingHere/></meta-data>
        </activity>
        <activity android:name=".ActivitySong">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"><nothingHere/></category>
            </intent-filter>
        </activity>
        <activity android:label="@string/favorites" android:name=".ActivityFavorites">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"><nothingHere/></category>
            </intent-filter>
        </activity>
    </application>
</manifest>
